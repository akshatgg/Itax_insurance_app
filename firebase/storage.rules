rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check file size
    function isValidFileSize(maxSizeMB) {
      return request.resource.size <= maxSizeMB * 1024 * 1024;
    }
    
    // Helper function to check file type
    function isValidFileType(contentType) {
      return request.resource.contentType.matches(contentType);
    }
    
    // User profile photos
    match /users/{userId}/profile/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) && 
                     isValidFileSize(5) && 
                     isValidFileType('image/.*');
    }
    
    // Insurance documents
    match /users/{userId}/documents/{documentType}/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && 
                     isValidFileSize(10) && 
                     isValidFileType('application/pdf|image/.*');
    }
    
    // Claim documents
    match /users/{userId}/claims/{claimId}/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && 
                     isValidFileSize(10) && 
                     isValidFileType('application/pdf|image/.*');
    }
    
    // Scanned documents for OCR
    match /users/{userId}/scans/{scanId}/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && 
                     isValidFileSize(5) && 
                     isValidFileType('image/.*');
    }
    
    // Public assets
    match /public/{fileName} {
      allow read: if true;
      allow write: if false; // Only admins can write to public folder
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
